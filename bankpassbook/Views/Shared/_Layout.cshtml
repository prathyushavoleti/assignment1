<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Pecunia Bank Project</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pecunia Bank", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Loan", "Index", "Loan", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Transaction", "Index", "Transactions", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Passbook", "Account_Summary", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <div style="margin-left:550px;display:inline-block">
                    @Html.ActionLink("Register", "Index", "Register", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Login", "login", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content" style="background-image:url(https://www.avanade.com/~/media/images/content/background/thinking/the-everyday-bank.jpg);width:100%;height:100%">
        <div class="container-fluid" style="background-color:whitesmoke;border:thin"></div>

        @RenderBody()

        <footer></footer>


        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        @*@RenderSection("scripts", required: false)*@
    </div>
</body>
</html>